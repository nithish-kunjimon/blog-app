<%- include("partials/header") %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form
    class="ui form"
    action="/blogs/<%= blog._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label>Title</label>
      <input
        type="text"
        name="blog[title]"
        value="<%= blog.title %> "
        placeholder="Title"
      />
    </div>
    <div class="field">
      <label>Image</label>
      <input
        type="text"
        name="blog[image]"
        value="<%= blog.image %>"
        placeholder=" Image URL"
      />
    </div>
    <div class="field">
      <label>Content</label>
      <textarea
        name="blog[body]"
        cols=" 30"
        rows="10"
        placeholder="Type your blog content"
      >
<%= blog.body %></textarea
      >
    </div>
    <div class="field">
      <input class="ui violet big basic button" type="submit" />
    </div>
  </form>
</div>

<%- include("partials/footer") %>
